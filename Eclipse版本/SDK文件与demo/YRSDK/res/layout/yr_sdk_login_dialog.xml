<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yr_sdk_box_all"
    android:gravity="center"
    android:orientation="vertical">


    <include layout="@layout/yr_sdk_include_include_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:id="@+id/yr_sdk_ll_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/yr_sdk_bg_bottom_shadow"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/yr_sdk_re_account"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="5dp">

                                <ImageView
                                    android:id="@+id/yr_sdk_login_item_iv_use"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="7dp"
                                    android:paddingTop="7dp"
                                    android:src="@mipmap/yr_sdk_icon_user" />

                                <View
                                    android:id="@+id/yr_sdk_login_item_view_line_use"
                                    style="@style/YYSDKvertical_line_gray_08"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/yr_sdk_login_item_iv_use"
                                    android:layout_alignTop="@+id/yr_sdk_login_item_iv_use"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginRight="7dp"
                                    android:layout_toRightOf="@+id/yr_sdk_login_item_iv_use" />

                                <com.yr.gamesdk.widget.DeleteEditText
                                    android:id="@+id/yr_sdk_login_item_login_ed_use"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/yr_sdk_login_item_view_line_use"
                                    android:layout_alignTop="@+id/yr_sdk_login_item_view_line_use"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/yr_sdk_login_item_iv_more_use"
                                    android:layout_toRightOf="@+id/yr_sdk_login_item_view_line_use"
                                    android:background="@null"
                                    android:gravity="center_vertical"
                                    android:drawablePadding="5dp"
                                    android:hint="@string/yr_sdk_inputaccout"
                                    android:maxLines="1"
                                    android:textColorHint="@color/yr_sdk_hint_text_gray"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:textColor="@color/yr_sdk_text_gray"
                                    android:textSize="@dimen/yr_sdk_login_ed_size" />



                                <ImageView
                                    android:id="@+id/yr_sdk_login_item_iv_more_use"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="7dp"
                                    android:paddingLeft="7dp"
                                    android:paddingTop="7dp"
                                    android:src="@mipmap/yr_sdk_icon_down" />
                            </RelativeLayout>

                            <View
                                android:id="@+id/yr_sdk_login_item_botom_line"
                                style="@style/YYSDKline_gray_08" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="5dp">

                                <ImageView
                                    android:id="@+id/yr_sdk_login_item_iv_pwd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="7dp"
                                    android:paddingTop="7dp"
                                    android:src="@mipmap/yr_sdk_icon_password" />

                                <View
                                    android:id="@+id/yr_sdk_login_item_view_line_pwd"
                                    style="@style/YYSDKvertical_line_gray_08"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/yr_sdk_login_item_iv_pwd"
                                    android:layout_alignTop="@+id/yr_sdk_login_item_iv_pwd"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginRight="7dp"

                                    android:layout_toRightOf="@+id/yr_sdk_login_item_iv_pwd" />

                                <com.yr.gamesdk.widget.DeleteEditText
                                    android:id="@+id/yr_sdk_login_item_login_ed_pwd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/yr_sdk_login_item_view_line_pwd"
                                    android:layout_alignTop="@+id/yr_sdk_login_item_view_line_pwd"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/yr_sdk_login_item_iv_change_pwd"
                                    android:layout_toRightOf="@+id/yr_sdk_login_item_view_line_pwd"
                                    android:background="@null"
                                    android:gravity="center_vertical"
                                    android:drawablePadding="5dp"
                                    android:hint="@string/yr_sdk_inputpw"
                                    android:maxLines="1"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:textColorHint="@color/yr_sdk_hint_text_gray"
                                    android:textColor="@color/yr_sdk_text_gray"
                                    android:textSize="@dimen/yr_sdk_login_ed_size" />


                                <ImageView
                                    android:id="@+id/yr_sdk_login_item_iv_change_pwd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="7dp"
                                    android:paddingLeft="7dp"
                                    android:paddingTop="7dp"
                                    android:src="@mipmap/yr_sdk_icon_changepass" />
                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <include layout="@layout/yr_sdk_include_login_btn" />

                    <RelativeLayout
                        android:id="@+id/yr_sdk_bottom_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/yr_sdk_ll_btn_contains"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/yr_sdk_tv_tourist_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            android:text="@string/yr_sdk_guest_login"
                            android:textColor="@color/yr_sdk_title_text_color"
                            android:textSize="@dimen/yr_sdk_tourist_login_size" />

                        <TextView
                            android:id="@+id/yr_sdk_tv_use_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="6dp"
                            android:text="@string/yr_sdk_onekey_register"
                            android:textColor="@color/yr_sdk_title_text_color"
                            android:textSize="@dimen/yr_sdk_tourist_login_size" />
                    </RelativeLayout>
                </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</LinearLayout>