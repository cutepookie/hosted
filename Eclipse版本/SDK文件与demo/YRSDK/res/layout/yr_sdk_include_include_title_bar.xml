<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yr_sdk_include_re_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/yr_sdk_box_title"
    android:layout_alignParentTop="true"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/yr_sdk_iv_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@mipmap/yr_sdk_icon_backs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/yr_sdk_logo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/yr_sdk_icon_logo" />

        <TextView
            android:id="@+id/yr_sdk_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/yr_sdk_title_text_color"
            android:textSize="@dimen/yr_sdk_title_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/yr_sdk_iv_title_rigth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@mipmap/yr_sdk_icon_close"
        android:visibility="gone"/>
</RelativeLayout>