<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/option_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="40dp">

    <ImageView
        android:id="@+id/iv_option_item_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:padding="10dp"
        android:src="@mipmap/yr_sdk_icon_delete"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/option_item_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_option_item_del"
        android:paddingLeft="5dp"
        android:textColor="@color/yr_sdk_text_gray"
        android:textSize="@dimen/yr_sdk_login_ed_size" />
</RelativeLayout>